generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
  SUPPORT
}

enum UserStatus {
  ACTIVE
  SUSPENDED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  EXPIRED
}

enum Market {
  FOREX
  INDICES
  CRYPTO
}

model User {
  id             String          @id @default(uuid())
  name           String
  email          String          @unique
  passwordHash   String
  role           UserRole        @default(USER)
  status         UserStatus      @default(ACTIVE)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  subscriptions  Subscription[]
  setups         UserSetup[]
  auditLogs      AdminAuditLog[] @relation("AdminActor")
}

model Plan {
  id                  String          @id @default(uuid())
  name                String
  description         String
  price               Decimal         @db.Decimal(10, 2)
  currency            String
  maxIndicatorsActive Int
  allowedMarkets      Market[]
  isActive            Boolean         @default(true)
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  subscriptions       Subscription[]
  planIndicators      PlanIndicator[]
}

model Subscription {
  id        String             @id @default(uuid())
  userId    String
  planId    String
  status    SubscriptionStatus @default(ACTIVE)
  startedAt DateTime
  endsAt    DateTime?
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  user      User               @relation(fields: [userId], references: [id])
  plan      Plan               @relation(fields: [planId], references: [id])
}

model Indicator {
  id                 String           @id @default(uuid())
  code               String           @unique
  name               String
  description        String
  category           String
  isPremium          Boolean          @default(false)
  defaultParams      Json
  userParamsEditable Boolean          @default(true)
  isActive           Boolean          @default(true)
  planIndicators     PlanIndicator[]
}

model PlanIndicator {
  planId      String
  indicatorId String
  plan        Plan      @relation(fields: [planId], references: [id])
  indicator   Indicator @relation(fields: [indicatorId], references: [id])

  @@id([planId, indicatorId])
}

model UserSetup {
  id         String   @id @default(uuid())
  userId     String
  name       String
  symbol     String
  timeframe  String
  indicators Json
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
}

model AdminAuditLog {
  id          String   @id @default(uuid())
  actorUserId String
  action      String
  targetType  String
  targetId    String
  metadata    Json
  createdAt   DateTime @default(now())
  actor       User     @relation("AdminActor", fields: [actorUserId], references: [id])
}
